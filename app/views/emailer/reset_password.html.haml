.email{ :style => email_global }

  .header
    %h1
      = image_tag('/images/LogoColcentric1.png', :alt => 'Kinubi')

  = dont_answer

  -#%p= t('emailer.reset_password.hey', :user_name => h(@user.name))

  .box{ :style => email_box }
    %p{ :style => email_text(:big) }= t('emailer.reset_password.successfully_reset')

  .access_platform
    %p{ :style => email_text(:small) }= t('emailer.reset_password.access_platform')
  .link_web
    %p{ :style => email_text(:small) }= link_to h(root_url), root_url, :style => inline_organization_link_colour

  .footer{ :style => email_text(:small) }
    -#%p= t('emailer.reset_password.report_abuse', :email => @user.email)
    %p
      =# t('emailer.reset_password.problems_html', :support => Colcentric.config.support)
      = t('emailer.reset_password.problems')
      = mail_to Colcentric.config.support, Colcentric.config.support, :style => 'color: #008ac0'

