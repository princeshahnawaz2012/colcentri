.email{ :style => email_global }

  .header
    %h1
      = image_tag('/images/LogoColcentric1.png', :alt => 'Kinubi')

  = dont_answer

  .box{ :style => email_box }
    %p{ :style => email_text(:big) }= t('emailer.reset_password.hey', :user_name => h(@user.name))
    %p{ :style => email_text(:big) }
      = t('emailer.reset_password.follow_this_link1')
      = link_to 'link', @url, :style => inline_organization_link_colour
      = t('emailer.reset_password.follow_this_link2')
    -#
      %p{ :style => email_text(:big) }
        = link_to t('emailer.reset_password.log_in'), @url

  %p{ :style => email_text(:small) }
    .message{ :style => 'color: #003869'}= t('emailer.reset_password.plaintext_link')
    %br
    = link_to @url, @url, :style => 'color: #008ac0'

  .footer{ :style => email_text(:small) }
    -#%p= t('emailer.reset_password.report_abuse', :email => @user.email)
    %p
      =# t('emailer.reset_password.problems_html', :support => Colcentric.config.support)
      = t('emailer.reset_password.problems')
      = mail_to Colcentric.config.support, Colcentric.config.support, :style => 'color: #008ac0'


