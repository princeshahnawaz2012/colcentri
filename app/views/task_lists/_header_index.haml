= drag_image
- header_on_index = @on_index || (action_name == 'index')
- on_index = false
.actions_menu
  - if params[:action] == 'show'
    = link_to_function image_tag('/iconos/renombrar22x22.png'), 'Element.show("form_edit_task_list");'
    = link_to image_tag('/iconos/borrar22x22.png'), '#', :action_url => project_task_list_path(project,task_list, :on_index => (on_index ? 1 : 0)), :aconfirm => t('confirm.delete_task_list'), :title => t('common.delete'), :class => 'taskListDelete'
  -#
    %span.actiondate= date_range_for_task_list(task_list)
    %span.loading{:style => 'display:none'}= "Loading..."
    - if task_list_editable?(task_list,current_user)
      = image_tag('triangle.png', :class => 'triangle')
      .extra
        = rename_task_list_link(project,task_list, header_on_index)
        = set_date_task_list_link(project,task_list, header_on_index)
        = resolve_archive_task_list_link(project,task_list, header_on_index)
  =# delete_task_list_link(project,task_list, header_on_index)
= the_task_list_link(task_list)

