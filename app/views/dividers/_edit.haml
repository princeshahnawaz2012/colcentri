= form_for [divider.project,divider.page,divider], :html => { :'data-remote' => 'true' } do |f|
  .area
    =# divider_fields(f)
    .divider_title= f.label :name, t('dividers.fields.title')
    = f.text_field :name, :class => 'divider_text_field_small'
    .submit{ :id => "divider_submit_#{divider.id}" }
      =# f.submit t('.submit'), :class => 'form_button'
      = image_submit_tag(t('buttons.save'), :class => 'divider_save_button')
      .divider_cancel_button_edit= link_to_function t('common.cancel'), remove_form("divider_#{divider.id}"), :class => 'text_button'
    =loading('divider_form',divider.id)
    .clear  
  .clear  